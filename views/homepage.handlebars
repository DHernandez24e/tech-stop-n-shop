<div class="container-fluid ">
  <div class="row">
    <div class="col-xs-6 col-lg-6 col-md-6 w-75">
      <img src="../images/fathersday.jpg" alt="Fathers Day Is Here" id="fatherdayImg">
    </div>

    <div class="col-xs-6 col-lg-6 col-md-6 ">

      <div id="carouselExampleControls" class="carousel slide border border-secondary b-5 w-50" data-ride="carousel">
        <div class="carousel-inner pb-3">

          <div>
            {{#each products}}
            {{#if @first}}
            <h3 class="pt-2 pl-4">Trending Products</h3>
            <div class="carousel-item active mt-2 text-center">
              <img src="{{image}}" alt="Card image" class="prodImg"> <br />
              <h5>{{this.product_name}}</h5>
              ${{this.price}}<br>
              <a href="#" data-name="{{product_name}}" data-price="{{price}}" class="add-to-cart btn btn-primary">Add to
                cart</a>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>

            {{else}}
            <div class="carousel-item text-center pb-2">

              <img src="{{image}}" alt="Card image" class="w-5 h-5 prodImg"> <br />
              <h5>{{this.product_name}}</h5>
              ${{this.price}}<br>
              <a href="#" data-name="{{product_name}}" data-price="{{price}}" class="add-to-cart btn btn-primary">Add to
                cart</a>
            </div>
            {{/if}}
            {{/each}}
          </div>
        </div>

      </div>
      <div class="w-50 mt-3 border border-secondary b-5 p-4">
        <h4>
          <span id="deal">Deal</span> of the Day!
        </h4>
        <img src="../images/fathersday.jpg" alt="Fathers Day Is Here" id="DOTD">
      </div>


    </div>
  </div>
</div>


